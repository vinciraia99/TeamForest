<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroudapp"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Benvenuto/a"
        android:textSize="40dp"
        android:id="@+id/testoinziale"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/testoinziale"
        android:id="@+id/testologin"
        android:layout_centerHorizontal="true"
        android:text="Inserisci i dati con cui registrarti"
        android:textSize="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginHorizontal="20dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_below="@id/testologin"
        android:id="@+id/testonome"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:gravity="center_vertical"
            android:text="Nome"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Inserisci il tuo nome"
            android:layout_weight="0.1"
            android:id="@+id/nome"
            android:singleLine="true"
            android:maxLines="1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginHorizontal="20dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_below="@id/testonome"
        android:id="@+id/testocognome">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:gravity="center_vertical"
            android:text="Cognome"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Inserisci il tuo cognome"
            android:layout_weight="0.1"
            android:id="@+id/cognome"
            android:singleLine="true"
            android:maxLines="1"/>

    </LinearLayout>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_marginHorizontal="20dp"
       android:layout_height="wrap_content"
       android:layout_centerHorizontal="true"
       android:orientation="horizontal"
       android:layout_below="@id/testocognome"
       android:id="@+id/testousername">

       <TextView
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:layout_weight="0.3"
           android:gravity="center_vertical"
           android:text="Username"/>

       <EditText
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:hint="Inserisci il tuo username"
           android:layout_weight="0.1"
           android:id="@+id/username"
           android:singleLine="true"
           android:maxLines="1"/>

   </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginHorizontal="20dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:id="@+id/testoemail"
        android:layout_below="@id/testopassword">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:gravity="center_vertical"
            android:text="E-Mail"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Inserisci la tua email"
            android:layout_weight="0.1"
            android:inputType="textEmailAddress"
            android:id="@+id/email"
            android:singleLine="true"
            android:maxLines="1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginHorizontal="20dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:id="@+id/testopassword"
        android:layout_below="@id/testousername">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:gravity="center_vertical"
            android:text="Password"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Inserisci la tua password"
            android:layout_weight="0.1"
            android:inputType="textPassword"
            android:id="@+id/password"
            android:singleLine="true"
            android:maxLines="1"/>

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/testoemail"
        android:layout_centerHorizontal="true"
        android:text="Registrati"
        android:backgroundTint="@color/green_200"
        android:onClick="registrati"
        android:layout_marginTop="20dp"/>

</LinearLayout>