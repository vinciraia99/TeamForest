<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/naturebg"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Benvenuto/a"
        android:textSize="40dp"
        android:textColor="@color/white"
        android:id="@+id/testoinziale"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/testoinziale"
        android:id="@+id/testologin"
        android:layout_centerHorizontal="true"
        android:text="Non hai effettuato l'accesso?"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:backgroundTint="@color/green_200"
        android:onClick="login"
        android:layout_below="@id/testologin"
        android:layout_centerHorizontal="true"
        android:id="@+id/buttonlogin"
        android:layout_marginTop="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonlogin"
        android:id="@+id/testoregistrazione"
        android:layout_centerHorizontal="true"
        android:text="Non hai un account? Registrati qui"
        android:textAlignment="center"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registrati"
        android:backgroundTint="@color/green_200"
        android:onClick="registrati"
        android:layout_below="@id/testoregistrazione"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"/>

</LinearLayout>